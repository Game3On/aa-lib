{
  "name": "root",
  "scripts": {
    "docs:dev": "pnpm --filter docs dev",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --cache",
    "lint:fix": "pnpm lint --fix",
    "lint:format": "prettier --write",
    "preinstall": "npx only-allow pnpm",
    "clear": "pnpm run clear:aa-contracts && pnpm -r --filter='./packages/*' run clear",
    "clear:aa-contracts": "pnpm --filter='./packages/account-abstraction/contracts' run postpack",
    "compile": "pnpm run compile:aa-contracts && pnpm -r --filter='./packages/*' run hardhat-compile",
    "compile:aa-contracts": "pnpm --filter='./packages/account-abstraction/contracts' run prepack",
    "tsc": "pnpm -r --filter='./packages/*' run tsc",
    "dev": "pnpm -r --filter='./packages/*' run dev",
    "build": "pnpm -r --filter='./packages/*' run build",
    "preprocess": "pnpm run clear && pnpm run compile && pnpm run dev",
    "hardhat-node": "lerna run hardhat-node --stream --no-prefix --",
    "hardhat-deploy": "lerna run hardhat-deploy --stream --no-prefix --",
    "bundler": "yarn --cwd packages/bundler bundler",
    "runop": "yarn --cwd packages/bundler runop",
    "runopweth": "yarn --cwd packages/bundler runopweth",
    "runopusdt": "yarn --cwd packages/bundler runopusdt",
    "runopfixed": "yarn --cwd packages/bundler runopfixed",
    "runopgasless": "yarn --cwd packages/bundler runopgasless"
  },
  "bugs": {
    "url": "https://github.com/Game3On/aa-lib/issues"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "@types/eslint": "^8.4.10",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "17.0.21",
    "@types/prettier": "^2.7.2",
    "dedent": "^0.7.0",
    "eslint": "8.17.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-mdx": "^2.0.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "execa": "^6.1.0",
    "fs-extra": "^11.1.0",
    "lerna": "^5.4.0",
    "prettier": "^2.8.3",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  },
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "pnpm": ">=7"
  }
}
